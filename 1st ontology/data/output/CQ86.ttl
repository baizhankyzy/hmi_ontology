@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .

ahmi:EnvironmentFactor a owl:Class ;
    rdfs:label "Environment Factor"@en ;
    rdfs:comment "A factor in the environment that can affect driver state detection."@en .

ahmi:RoadCondition a owl:Class ;
    rdfs:label "Road Condition"@en ;
    rdfs:subClassOf ahmi:EnvironmentFactor ;
    rdfs:comment "The condition of the road surface, such as wet, icy, or rough."@en .

ahmi:Weather a owl:Class ;
    rdfs:label "Weather"@en ;
    rdfs:subClassOf ahmi:EnvironmentFactor ;
    rdfs:comment "The atmospheric conditions, such as rain, snow, or fog."@en .

ahmi:Lighting a owl:Class ;
    rdfs:label "Lighting"@en ;
    rdfs:subClassOf ahmi:EnvironmentFactor ;
    rdfs:comment "The level and quality of illumination, including natural and artificial light sources."@en .

ahmi:TrafficCondition a owl:Class ;
    rdfs:label "Traffic Condition"@en ;
    rdfs:subClassOf ahmi:EnvironmentFactor ;
    rdfs:comment "The density and flow of vehicles on the road."@en .

ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "The physical, mental, and emotional condition of the driver."@en .

ahmi:DetectionMethod a owl:Class ;
    rdfs:label "Detection Method"@en ;
    rdfs:comment "A method or technique used to detect the driver's state."@en .

ahmi:affects a owl:ObjectProperty ;
    rdfs:label "affects"@en ;
    rdfs:comment "Relates an environment factor to the driver state it can influence."@en ;
    rdfs:domain ahmi:EnvironmentFactor ;
    rdfs:range ahmi:DriverState .

ahmi:isDetectedBy a owl:ObjectProperty ;
    rdfs:label "is detected by"@en ;
    rdfs:comment "Relates a driver state to the detection method used to identify it."@en ;
    rdfs:domain ahmi:DriverState ;
    rdfs:range ahmi:DetectionMethod .

ahmi:DriverSituation a owl:Class ;
    rdfs:label "Driver Situation"@en ;
    rdfs:comment "A view or interpretation of a driver's state and the environmental factors affecting it."@en ;
    rdfs:subClassOf ahmi:Situation .

ahmi:hasEnvironmentFactor a owl:ObjectProperty ;
    rdfs:label "has environment factor"@en ;
    rdfs:comment "Relates a driver situation to the environment factors involved."@en ;
    rdfs:domain ahmi:DriverSituation ;
    rdfs:range ahmi:EnvironmentFactor .

ahmi:observesDriverState a owl:ObjectProperty ;
    rdfs:label "observes driver state"@en ;
    rdfs:comment "Relates a driver situation to the driver state it represents."@en ;
    rdfs:domain ahmi:DriverSituation ;
    rdfs:range ahmi:DriverState .

ahmi:DriverStateEvent a owl:Class ;
    rdfs:label "Driver State Event"@en ;
    rdfs:comment "An event representing a change or transition in the driver's state."@en .

ahmi:situationOf a owl:ObjectProperty ;
    rdfs:label "situation of"@en ;
    rdfs:comment "Relates a situation to the event it represents a view or interpretation of."@en ;
    rdfs:domain ahmi:DriverSituation ;
    rdfs:range ahmi:DriverStateEvent .