@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .
@prefix dul: <http://ontologydesignpatterns.org/ont/dul/DUL.owl#> .

ahmi:ControlTransition a owl:Class ;
    rdfs:label "Control Transition"@en ;
    rdfs:comment "A process of transferring control between a human driver and an autonomous vehicle system."@en .

ahmi:MultimodalIntegrationProtocol a owl:Class ;
    rdfs:label "Multimodal Integration Protocol"@en ;
    rdfs:comment "A sequence of actions and feedback modalities used to facilitate a control transition."@en ;
    rdfs:subClassOf dul:Description ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:hasComponent ;
        owl:someValuesFrom ahmi:FeedbackModality
    ] .

ahmi:FeedbackModality a owl:Class ;
    rdfs:label "Feedback Modality"@en ;
    rdfs:comment "A type of feedback used to communicate with the driver during a control transition."@en .

ahmi:VisualFeedback a owl:Class ;
    rdfs:label "Visual Feedback"@en ;
    rdfs:comment "Visual cues and information displayed to the driver."@en ;
    rdfs:subClassOf ahmi:FeedbackModality .

ahmi:AudibleFeedback a owl:Class ;
    rdfs:label "Audible Feedback"@en ;
    rdfs:comment "Auditory notifications and sounds provided to the driver."@en ;
    rdfs:subClassOf ahmi:FeedbackModality .

ahmi:TactileFeedback a owl:Class ;
    rdfs:label "Tactile Feedback"@en ;
    rdfs:comment "Haptic alerts and vibrations felt by the driver."@en ;
    rdfs:subClassOf ahmi:FeedbackModality .

ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "The physical, cognitive, and behavioral state of the driver."@en .

ahmi:CognitiveState a owl:Class ;
    rdfs:label "Cognitive State"@en ;
    rdfs:comment "The mental and attentional state of the driver."@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:PostureState a owl:Class ;
    rdfs:label "Posture State"@en ;
    rdfs:comment "The physical posture and body position of the driver."@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:DistractionState a owl:Class ;
    rdfs:label "Distraction State"@en ;
    rdfs:comment "The level of engagement in non-driving activities."@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:EnvironmentalCondition a owl:Class ;
    rdfs:label "Environmental Condition"@en ;
    rdfs:comment "The external conditions and context surrounding the vehicle."@en .

ahmi:DetectionMethod a owl:Class ;
    rdfs:label "Detection Method"@en ;
    rdfs:comment "A technique used to assess the driver's state or environmental conditions."@en .

ahmi:CameraDetection a owl:Class ;
    rdfs:label "Camera Detection"@en ;
    rdfs:comment "Using cameras to detect visual cues about the driver or environment."@en ;
    rdfs:subClassOf ahmi:DetectionMethod .

ahmi:SensorDetection a owl:Class ;
    rdfs:label "Sensor Detection"@en ;
    rdfs:comment "Using sensors to detect physiological or environmental data."@en ;
    rdfs:subClassOf ahmi:DetectionMethod .

ahmi:ContextualAnalysis a owl:Class ;
    rdfs:label "Contextual Analysis"@en ;
    rdfs:comment "Analyzing the surrounding context and environment."@en ;
    rdfs:subClassOf ahmi:DetectionMethod .

ahmi:hasComponent a owl:ObjectProperty ;
    rdfs:label "has component"@en ;
    rdfs:comment "Relates a multimodal integration protocol to its constituent feedback modalities."@en ;
    rdfs:domain ahmi:MultimodalIntegrationProtocol ;
    rdfs:range ahmi:FeedbackModality .

ahmi:assessesDriverState a owl:ObjectProperty ;
    rdfs:label "assesses driver state"@en ;
    rdfs:comment "Relates a detection method to the driver state it assesses."@en ;
    rdfs:domain ahmi:DetectionMethod ;
    rdfs:range ahmi:DriverState .

ahmi:assessesEnvironment a owl:ObjectProperty ;
    rdfs:label "assesses environment"@en ;
    rdfs:comment "Relates a detection method to the environmental conditions it assesses."@en ;
    rdfs:domain ahmi:DetectionMethod ;
    rdfs:range ahmi:EnvironmentalCondition .

ahmi:ControlTransitionSituation a owl:Class ;
    rdfs:label "Control Transition Situation"@en ;
    rdfs:comment "A situation representing a specific view or interpretation of a control transition event."@en ;
    rdfs:subClassOf dul:Situation ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty dul:satisfies ;
        owl:someValuesFrom ahmi:MultimodalIntegrationProtocol
    ] ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty dul:isSettingFor ;
        owl:someValuesFrom ahmi:ControlTransition
    ] .

ahmi:DriverReadinessSituation a owl:Class ;
    rdfs:label "Driver Readiness Situation"@en ;
    rdfs:comment "A situation focused on assessing the driver's readiness for a control transition."@en ;
    rdfs:subClassOf ahmi:ControlTransitionSituation .

ahmi:EnvironmentMonitoringSituation a owl:Class ;
    rdfs:label "Environment Monitoring Situation"@en ;
    rdfs:comment "A situation focused on monitoring the external environment for conditions affecting the control transition."@en ;
    rdfs:subClassOf ahmi:ControlTransitionSituation .

ahmi:isSettingFor a owl:ObjectProperty ;
    rdfs:label "is setting for"@en ;
    rdfs:comment "Relates a situation to the event or process it represents a view of."@en ;
    rdfs:domain dul:Situation ;
    rdfs:range dul:Entity .