@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .

ahmi:AdaptiveHMI a owl:Class ;
    rdfs:label "Adaptive HMI"@en ;
    rdfs:comment "A human-machine interface that adapts its behavior based on driver state, vehicle context, and environmental factors."@en .

ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "The cognitive, physical, and behavioral state of the driver."@en .

ahmi:CognitiveState a owl:Class ;
    rdfs:label "Cognitive State"@en ;
    rdfs:comment "The cognitive aspects of the driver's state, such as attention, reaction time, and comprehension."@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:PhysicalState a owl:Class ;
    rdfs:label "Physical State"@en ;
    rdfs:comment "The physical aspects of the driver's state, such as age, vision, and motor abilities."@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:BehavioralState a owl:Class ;
    rdfs:label "Behavioral State"@en ;
    rdfs:comment "The behavioral aspects of the driver's state, such as eye tracking, steering behavior, and lane keeping."@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:VehicleContext a owl:Class ;
    rdfs:label "Vehicle Context"@en ;
    rdfs:comment "The context related to the vehicle, including its systems, sensors, and feedback modalities."@en .

ahmi:EnvironmentContext a owl:Class ;
    rdfs:label "Environment Context"@en ;
    rdfs:comment "The context related to the external environment, such as weather conditions, road type, and traffic."@en .

ahmi:Event a owl:Class ;
    rdfs:label "Event"@en ;
    rdfs:comment "A physical, social, or mental process that occurs over time."@en .

ahmi:Situation a owl:Class ;
    rdfs:label "Situation"@en ;
    rdfs:comment "A view or interpretation of an event, based on a particular description or conceptualization."@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:observes ;
        owl:someValuesFrom ahmi:Event
    ] .

ahmi:Description a owl:Class ;
    rdfs:label "Description"@en ;
    rdfs:comment "A conceptualization that provides a context for interpreting situations and events."@en .

ahmi:observes a owl:ObjectProperty ;
    rdfs:label "observes"@en ;
    rdfs:comment "Relates a situation to the event it observes or interprets."@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Event .

ahmi:satisfies a owl:ObjectProperty ;
    rdfs:label "satisfies"@en ;
    rdfs:comment "Relates a situation to the description it satisfies or is consistent with."@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Description .

ahmi:hasDriverState a owl:ObjectProperty ;
    rdfs:label "has driver state"@en ;
    rdfs:comment "Relates an adaptive HMI to the driver state it considers."@en ;
    rdfs:domain ahmi:AdaptiveHMI ;
    rdfs:range ahmi:DriverState .

ahmi:hasVehicleContext a owl:ObjectProperty ;
    rdfs:label "has vehicle context"@en ;
    rdfs:comment "Relates an adaptive HMI to the vehicle context it considers."@en ;
    rdfs:domain ahmi:AdaptiveHMI ;
    rdfs:range ahmi:VehicleContext .

ahmi:hasEnvironmentContext a owl:ObjectProperty ;
    rdfs:label "has environment context"@en ;
    rdfs:comment "Relates an adaptive HMI to the environment context it considers."@en ;
    rdfs:domain ahmi:AdaptiveHMI ;
    rdfs:range ahmi:EnvironmentContext .

ahmi:hasAdaptationRule a owl:ObjectProperty ;
    rdfs:label "has adaptation rule"@en ;
    rdfs:comment "Relates an adaptive HMI to the rules it uses for adapting its behavior."@en ;
    rdfs:domain ahmi:AdaptiveHMI ;
    rdfs:range ahmi:AdaptationRule .

ahmi:AdaptationRule a owl:Class ;
    rdfs:label "Adaptation Rule"@en ;
    rdfs:comment "A rule that specifies how the HMI should adapt its behavior based on driver state, vehicle context, and environment context."@en .

ahmi:hasDriverStateParameter a owl:ObjectProperty ;
    rdfs:label "has driver state parameter"@en ;
    rdfs:comment "Relates an adaptation rule to the driver state parameters it considers."@en ;
    rdfs:domain ahmi:AdaptationRule ;
    rdfs:range ahmi:DriverStateParameter .

ahmi:DriverStateParameter a owl:Class ;
    rdfs:label "Driver State Parameter"@en ;
    rdfs:comment "A parameter that represents a specific aspect of the driver's state, such as reaction time or eye tracking behavior."@en ;
    rdfs:subClassOf ahmi:Parameter .

ahmi:Parameter a owl:Class ;
    rdfs:label "Parameter"@en ;
    rdfs:comment "A concept that constrains attributes of entities in a situation."@en .

ahmi:hasVehicleContextParameter a owl:ObjectProperty ;
    rdfs:label "has vehicle context parameter"@en ;
    rdfs:comment "Relates an adaptation rule to the vehicle context parameters it considers."@en ;
    rdfs:domain ahmi:AdaptationRule ;
    rdfs:range ahmi:VehicleContextParameter .

ahmi:VehicleContextParameter a owl:Class ;
    rdfs:label "Vehicle Context Parameter"@en ;
    rdfs:comment "A parameter that represents a specific aspect of the vehicle context, such as sensor data or feedback modalities."@en ;
    rdfs:subClassOf ahmi:Parameter .

ahmi:hasEnvironmentContextParameter a owl:ObjectProperty ;
    rdfs:label "has environment context parameter"@en ;
    rdfs:comment "Relates an adaptation rule to the environment context parameters it considers."@en ;
    rdfs:domain ahmi:AdaptationRule ;
    rdfs:range ahmi:EnvironmentContextParameter .

ahmi:EnvironmentContextParameter a owl:Class ;
    rdfs:label "Environment Context Parameter"@en ;
    rdfs:comment "A parameter that represents a specific aspect of the environment context, such as weather conditions or road type."@en ;
    rdfs:subClassOf ahmi:Parameter .

ahmi:hasAdaptationAction a owl:ObjectProperty ;
    rdfs:label "has adaptation action"@en ;
    rdfs:comment "Relates an adaptation rule to the actions the HMI should take when the rule conditions are met."@en ;
    rdfs:domain ahmi:AdaptationRule ;
    rdfs:range ahmi:AdaptationAction .

ahmi:AdaptationAction a owl:Class ;
    rdfs:label "Adaptation Action"@en ;
    rdfs:comment "An action that the HMI should take to adapt its behavior based on the adaptation rule."@en .

ahmi:hasLaneKeepingAssistSensitivity a owl:DatatypeProperty ;
    rdfs:label "has lane keeping assist sensitivity"@en ;
    rdfs:comment "Specifies the sensitivity level of the lane keeping assist system."@en ;
    rdfs:domain ahmi:AdaptationAction ;
    rdfs:range xsd:float .

ahmi:hasVisualElementSize a owl:DatatypeProperty ;
    rdfs:label "has visual element size"@en ;
    rdfs:comment "Specifies the size of visual elements in the HMI display."@en ;
    rdfs:domain ahmi:AdaptationAction ;
    rdfs:range xsd:float .

ahmi:hasAudioPromptTiming a owl:DatatypeProperty ;
    rdfs:label "has audio prompt timing"@en ;
    rdfs:comment "Specifies the timing of audio prompts provided by the HMI."@en ;
    rdfs:domain ahmi:AdaptationAction ;
    rdfs:range xsd:float .

ahmi:hasMessageComplexity a owl:DatatypeProperty ;
    rdfs:label "has message complexity"@en ;
    rdfs:comment "Specifies the complexity level of messages presented by the HMI."@en ;
    rdfs:domain ahmi:AdaptationAction ;
    rdfs:range xsd:float .