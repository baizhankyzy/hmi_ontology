@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .

ahmi:Vehicle a owl:Class ;
    rdfs:label "Vehicle"@en ;
    rdfs:comment "A vehicle equipped with ADAS features"@en .

ahmi:ADAS a owl:Class ;
    rdfs:label "ADAS"@en ;
    rdfs:comment "Advanced Driver Assistance System"@en ;
    rdfs:subClassOf ahmi:VehicleSystem .

ahmi:VehicleSystem a owl:Class ;
    rdfs:label "Vehicle System"@en ;
    rdfs:comment "A system integrated into a vehicle"@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:isPartOf ;
        owl:someValuesFrom ahmi:Vehicle
    ] .

ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "The state or condition of the driver"@en .

ahmi:DetectionMethod a owl:Class ;
    rdfs:label "Detection Method"@en ;
    rdfs:comment "A method for detecting driver state or environmental conditions"@en .

ahmi:FeedbackModality a owl:Class ;
    rdfs:label "Feedback Modality"@en ;
    rdfs:comment "A way of providing feedback or adaptation to the driver"@en .

ahmi:AdaptationStrategy a owl:Class ;
    rdfs:label "Adaptation Strategy"@en ;
    rdfs:comment "A strategy for adapting the vehicle system based on driver state or environmental conditions"@en .

ahmi:EnvironmentalFactor a owl:Class ;
    rdfs:label "Environmental Factor"@en ;
    rdfs:comment "A factor related to the environment or driving conditions"@en .

ahmi:Event a owl:Class ;
    rdfs:label "Event"@en ;
    rdfs:comment "A physical, social, or mental process"@en .

ahmi:Situation a owl:Class ;
    rdfs:label "Situation"@en ;
    rdfs:comment "A view or interpretation of an event"@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:observes ;
        owl:someValuesFrom ahmi:Event
    ] .

ahmi:Description a owl:Class ;
    rdfs:label "Description"@en ;
    rdfs:comment "A conceptualization that provides context for interpreting situations"@en .

ahmi:isPartOf a owl:ObjectProperty ;
    rdfs:label "is part of"@en ;
    rdfs:comment "Indicates that an entity is a part of another entity"@en ;
    rdfs:domain ahmi:Entity ;
    rdfs:range ahmi:Entity .

ahmi:hasADASFeature a owl:ObjectProperty ;
    rdfs:label "has ADAS feature"@en ;
    rdfs:comment "Relates a vehicle to an ADAS feature it has"@en ;
    rdfs:domain ahmi:Vehicle ;
    rdfs:range ahmi:ADAS .

ahmi:detects a owl:ObjectProperty ;
    rdfs:label "detects"@en ;
    rdfs:comment "Relates a detection method to the driver state or environmental factor it detects"@en ;
    rdfs:domain ahmi:DetectionMethod ;
    rdfs:range owl:unionOf(ahmi:DriverState ahmi:EnvironmentalFactor) .

ahmi:provides a owl:ObjectProperty ;
    rdfs:label "provides"@en ;
    rdfs:comment "Relates an ADAS feature to the feedback modality it provides"@en ;
    rdfs:domain ahmi:ADAS ;
    rdfs:range ahmi:FeedbackModality .

ahmi:adaptsUsing a owl:ObjectProperty ;
    rdfs:label "adapts using"@en ;
    rdfs:comment "Relates an ADAS feature to the adaptation strategy it uses"@en ;
    rdfs:domain ahmi:ADAS ;
    rdfs:range ahmi:AdaptationStrategy .

ahmi:observes a owl:ObjectProperty ;
    rdfs:label "observes"@en ;
    rdfs:comment "Relates a situation to the event it observes or interprets"@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Event .

ahmi:satisfies a owl:ObjectProperty ;
    rdfs:label "satisfies"@en ;
    rdfs:comment "Relates a situation to the description it satisfies"@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Description .

ahmi:Entity a owl:Class ;
    rdfs:label "Entity"@en ;
    rdfs:comment "Any physical, social, or mental object, event, or quality"@en .