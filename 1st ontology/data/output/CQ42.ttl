@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .

ahmi:Event a owl:Class ;
    rdfs:label "Event"@en ;
    rdfs:comment "A physical, social, or mental process that occurs over time."@en .

ahmi:Situation a owl:Class ;
    rdfs:label "Situation"@en ;
    rdfs:comment "A view or interpretation of an event, consistent with a description."@en ;
    rdfs:subClassOf ahmi:SocialObject ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:satisfies ;
        owl:someValuesFrom ahmi:Description
    ] .

ahmi:SocialObject a owl:Class ;
    rdfs:label "Social Object"@en ;
    rdfs:comment "An object created in a social context."@en .

ahmi:Description a owl:Class ;
    rdfs:label "Description"@en ;
    rdfs:comment "A conceptualization that provides context for interpreting situations and events."@en ;
    rdfs:subClassOf ahmi:SocialObject .

ahmi:satisfies a owl:ObjectProperty ;
    rdfs:label "satisfies"@en ;
    rdfs:comment "Relates a situation to the description it satisfies."@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Description .

ahmi:NonDrivingActivity a owl:Class ;
    rdfs:label "Non-Driving Activity"@en ;
    rdfs:comment "An activity performed by the driver that is not related to driving."@en ;
    rdfs:subClassOf ahmi:Event .

ahmi:hasType a owl:ObjectProperty ;
    rdfs:label "has type"@en ;
    rdfs:comment "Relates a non-driving activity to its type or category."@en ;
    rdfs:domain ahmi:NonDrivingActivity ;
    rdfs:range ahmi:NonDrivingActivityType .

ahmi:NonDrivingActivityType a owl:Class ;
    rdfs:label "Non-Driving Activity Type"@en ;
    rdfs:comment "A category or type of non-driving activity."@en .

ahmi:ReadingEmails a owl:Class ;
    rdfs:label "Reading Emails"@en ;
    rdfs:comment "The activity of reading emails while in the vehicle."@en ;
    rdfs:subClassOf ahmi:NonDrivingActivity .

ahmi:AutonomousMode a owl:Class ;
    rdfs:label "Autonomous Mode"@en ;
    rdfs:comment "The mode of operation where the vehicle is driving autonomously."@en ;
    rdfs:subClassOf ahmi:Situation .

ahmi:occursIn a owl:ObjectProperty ;
    rdfs:label "occurs in"@en ;
    rdfs:comment "Relates a non-driving activity to the situation or mode in which it occurs."@en ;
    rdfs:domain ahmi:NonDrivingActivity ;
    rdfs:range ahmi:Situation .

ahmi:hasFrequency a owl:DatatypeProperty ;
    rdfs:label "has frequency"@en ;
    rdfs:comment "The frequency or commonality of a non-driving activity occurring in autonomous mode."@en ;
    rdfs:domain ahmi:NonDrivingActivity ;
    rdfs:range xsd:float .