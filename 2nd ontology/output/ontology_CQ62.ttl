@prefix : <http://www.example.org/test#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

<http://www.example.org/test#> a owl:Ontology .

:WorkloadScale a owl:Class ;
    rdfs:label "WorkloadScale" ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty :collectsRating ;
        owl:someValuesFrom [
            rdf:type owl:Class ;
            owl:unionOf ( :MentalLoad :FrustrationLevel :EffortLevel )
        ]
    ] .

:MentalLoad a owl:Class ;
    rdfs:label "MentalLoad" .

:FrustrationLevel a owl:Class ;
    rdfs:label "FrustrationLevel" .

:EffortLevel a owl:Class ;
    rdfs:label "EffortLevel" .

:collectsRating a owl:ObjectProperty ;
    rdfs:label "collectsRating" ;
    rdfs:domain :WorkloadScale ;
    rdfs:range [ rdf:type owl:Class ;
                 owl:unionOf ( :MentalLoad :FrustrationLevel :EffortLevel )
               ] .