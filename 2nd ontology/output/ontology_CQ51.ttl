@prefix : <http://www.example.org/test#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

<http://www.example.org/test#> a owl:Ontology .

:PostureType a owl:Class ;
    rdfs:label "PostureType" .

:SeatSensor a owl:Class ;
    rdfs:label "SeatSensor" ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty :detects ;
        owl:someValuesFrom :PostureType
    ] .

:AttentivePosition a owl:Class ;
    rdfs:label "AttentivePosition" ;
    rdfs:subClassOf :PostureType ;
    rdfs:comment "Indicates readiness for manual control" .

:RelaxedPosition a owl:Class ;
    rdfs:label "RelaxedPosition" ;
    rdfs:subClassOf :PostureType .

:detects a owl:ObjectProperty ;
    rdfs:label "detects" ;
    rdfs:domain :SeatSensor ;
    rdfs:range :PostureType .