@prefix : <http://www.example.org/test#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

<http://www.example.org/test#> a owl:Ontology .

:DetectionMethodology a owl:Class ;
    rdfs:label "Detection Methodology"@en ;
    rdfs:comment "A methodology for detecting drowsiness in drivers."@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty :requires ;
        owl:someValuesFrom :Sensor
    ] .

:Sensor a owl:Class ;
    rdfs:label "Sensor"@en ;
    rdfs:comment "A device used to observe and measure a physical quantity."@en .

:VisualSensor a owl:Class ;
    rdfs:label "Visual Sensor"@en ;
    rdfs:comment "A sensor that captures visual data, such as cameras."@en ;
    rdfs:subClassOf :Sensor .

:PhysiologicalSensor a owl:Class ;
    rdfs:label "Physiological Sensor"@en ;
    rdfs:comment "A sensor that measures physiological signals, such as EEG or respiration."@en ;
    rdfs:subClassOf :Sensor .

:Camera a owl:Class ;
    rdfs:label "Camera"@en ;
    rdfs:comment "A device used to capture visual data."@en ;
    rdfs:subClassOf :VisualSensor .

:EEG a owl:Class ;
    rdfs:label "Electroencephalogram (EEG)"@en ;
    rdfs:comment "A physiological sensor that measures electrical activity in the brain."@en ;
    rdfs:subClassOf :PhysiologicalSensor .

:RespirationSensor a owl:Class ;
    rdfs:label "Respiration Sensor"@en ;
    rdfs:comment "A sensor that measures respiration rate and patterns."@en ;
    rdfs:subClassOf :PhysiologicalSensor .

:Drowsiness a owl:Class ;
    rdfs:label "Drowsiness"@en ;
    rdfs:comment "A state of impaired alertness and reduced cognitive performance."@en .

:Fatigue a owl:Class ;
    rdfs:label "Fatigue"@en ;
    rdfs:comment "A state of physical or mental exhaustion."@en .

:CognitiveState a owl:Class ;
    rdfs:label "Cognitive State"@en ;
    rdfs:comment "A mental state related to cognitive functions."@en .

:requires a owl:ObjectProperty ;
    rdfs:label "requires"@en ;
    rdfs:comment "Relates a detection methodology to the sensors it requires."@en ;
    rdfs:domain :DetectionMethodology ;
    rdfs:range :Sensor .

:observes a owl:ObjectProperty ;
    rdfs:label "observes"@en ;
    rdfs:comment "Relates a sensor to the physical quantity or state it observes."@en ;
    rdfs:domain :Sensor ;
    rdfs:range [ a owl:Class ;
        owl:unionOf ( :Drowsiness :Fatigue :CognitiveState )
    ] .

:isPartOf a owl:ObjectProperty ;
    rdfs:label "is part of"@en ;
    rdfs:comment "Relates an entity to a larger whole it is a part of."@en .