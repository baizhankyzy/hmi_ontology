@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/adaptive-hmi#> .

<http://example.org/adaptive-hmi> a owl:Ontology ;
    rdfs:label "Adaptive Human-Machine Interface Ontology"@en ;
    rdfs:comment "An ontology for describing adaptive human-machine interfaces with a focus on driver state detection and multimodal feedback"@en .

# Core Concepts from DUL
ahmi:Entity a owl:Class ;
    rdfs:label "Entity"@en ;
    rdfs:comment "Any physical, social, or mental object, event, or quality"@en .

ahmi:Object a owl:Class ;
    rdfs:label "Object"@en ;
    rdfs:comment "Any physical, social, or mental object"@en ;
    rdfs:subClassOf ahmi:Entity .

ahmi:Event a owl:Class ;
    rdfs:label "Event"@en ;
    rdfs:comment "Any physical, social, or mental process, event, or state"@en ;
    rdfs:subClassOf ahmi:Entity ;
    owl:disjointWith ahmi:Object .

ahmi:Process a owl:Class ;
    rdfs:label "Process"@en ;
    rdfs:comment "Events that are considered in their evolution, or not strictly dependent on agents, tasks, and plans"@en ;
    rdfs:subClassOf ahmi:Event .

ahmi:Situation a owl:Class ;
    rdfs:label "Situation"@en ;
    rdfs:comment "A view on events that is consistent with a description and can be observed on a set of entities"@en ;
    rdfs:subClassOf ahmi:SocialObject .

ahmi:SocialObject a owl:Class ;
    rdfs:label "Social Object"@en ;
    rdfs:comment "Objects that are created in a social context"@en ;
    rdfs:subClassOf ahmi:Object .

ahmi:Description a owl:Class ;
    rdfs:label "Description"@en ;
    rdfs:comment "A conceptualization that provides a context for interpreting situations and events"@en ;
    rdfs:subClassOf ahmi:SocialObject .

ahmi:TimeInterval a owl:Class ;
    rdfs:label "Time Interval"@en ;
    rdfs:comment "A period of time"@en .

# Domain-Specific Classes
ahmi:DrivingEvent a owl:Class ;
    rdfs:label "Driving Event"@en ;
    rdfs:comment "An event that occurs during driving"@en ;
    rdfs:subClassOf ahmi:Event .

ahmi:DrivingProcess a owl:Class ;
    rdfs:label "Driving Process"@en ;
    rdfs:comment "A process that occurs during driving, considered in its evolution"@en ;
    rdfs:subClassOf ahmi:Process .

ahmi:DrivingSituation a owl:Class ;
    rdfs:label "Driving Situation"@en ;
    rdfs:comment "A situation that represents a specific driving context or scenario"@en ;
    rdfs:subClassOf ahmi:Situation .

ahmi:DrivingDescription a owl:Class ;
    rdfs:label "Driving Description"@en ;
    rdfs:comment "A conceptualization that provides a context for interpreting driving situations"@en ;
    rdfs:subClassOf ahmi:Description .

# Driver State Concepts
ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "A state of the driver"@en ;
    rdfs:subClassOf ahmi:SocialObject .

ahmi:Drowsiness a owl:Class ;
    rdfs:label "Drowsiness"@en ;
    rdfs:comment "A state of reduced alertness and vigilance due to fatigue"@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:DriversinessDrivingProcess a owl:Class ;
    rdfs:label "Drowsiness Driving Process"@en ;
    rdfs:comment "The process of driving while experiencing drowsiness"@en ;
    rdfs:subClassOf ahmi:DrivingProcess .

# Situation-specific classes
ahmi:DrowsinessSituation a owl:Class ;
    rdfs:label "Drowsiness Situation"@en ;
    rdfs:comment "A situation where a driver is exhibiting signs of drowsiness"@en ;
    rdfs:subClassOf ahmi:DrivingSituation .

ahmi:DrowsinessAsRiskSituation a owl:Class ;
    rdfs:label "Drowsiness As Risk Situation"@en ;
    rdfs:comment "A situation where drowsiness is viewed as a safety risk requiring intervention"@en ;
    rdfs:subClassOf ahmi:DrowsinessSituation .

ahmi:DrowsinessAsFatigueSituation a owl:Class ;
    rdfs:label "Drowsiness As Fatigue Situation"@en ;
    rdfs:comment "A situation where drowsiness is viewed as a symptom of fatigue requiring rest"@en ;
    rdfs:subClassOf ahmi:DrowsinessSituation .

# Description classes
ahmi:SafetyRiskTheory a owl:Class ;
    rdfs:label "Safety Risk Theory"@en ;
    rdfs:comment "A description that interprets driver states as safety risks"@en ;
    rdfs:subClassOf ahmi:DrivingDescription .

ahmi:DriverWellbeingTheory a owl:Class ;
    rdfs:label "Driver Wellbeing Theory"@en ;
    rdfs:comment "A description that interprets driver states in terms of wellbeing and comfort"@en ;
    rdfs:subClassOf ahmi:DrivingDescription .

# Adaptation concepts
ahmi:AdaptationEvent a owl:Class ;
    rdfs:label "Adaptation Event"@en ;
    rdfs:comment "An event where the vehicle interface adapts to driver state"@en ;
    rdfs:subClassOf ahmi:DrivingEvent .

ahmi:AdaptationProcess a owl:Class ;
    rdfs:label "Adaptation Process"@en ;
    rdfs:comment "The process of the vehicle interface adapting over time"@en ;
    rdfs:subClassOf ahmi:DrivingProcess .

ahmi:AdaptationSituation a owl:Class ;
    rdfs:label "Adaptation Situation"@en ;
    rdfs:comment "A situation representing a specific adaptation response to driver state"@en ;
    rdfs:subClassOf ahmi:DrivingSituation .

# Feedback concepts  
ahmi:Feedback a owl:Class ;
    rdfs:label "Feedback"@en ;
    rdfs:comment "Feedback provided to the driver by the vehicle"@en ;
    rdfs:subClassOf ahmi:Object .

ahmi:VisualFeedback a owl:Class ;
    rdfs:label "Visual Feedback"@en ;
    rdfs:comment "Feedback provided through visual means"@en ;
    rdfs:subClassOf ahmi:Feedback .

ahmi:AuditoryFeedback a owl:Class ;
    rdfs:label "Auditory Feedback"@en ;
    rdfs:comment "Feedback provided through auditory means"@en ;
    rdfs:subClassOf ahmi:Feedback .

ahmi:HapticFeedback a owl:Class ;
    rdfs:label "Haptic Feedback"@en ;
    rdfs:comment "Feedback provided through tactile means"@en ;
    rdfs:subClassOf ahmi:Feedback .

# Object Properties
ahmi:hasParticipant a owl:ObjectProperty ;
    rdfs:label "has participant"@en ;
    rdfs:comment "Relates an event to entities that participate in it"@en ;
    rdfs:domain ahmi:Event ;
    rdfs:range ahmi:Object .

ahmi:observes a owl:ObjectProperty ;
    rdfs:label "observes"@en ;
    rdfs:comment "Relates a situation to the events it observes"@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Event .

ahmi:consistentWith a owl:ObjectProperty ;
    rdfs:label "consistent with"@en ;
    rdfs:comment "Relates a situation to the description that provides its context"@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Description .

ahmi:hasTimeInterval a owl:ObjectProperty ;
    rdfs:label "has time interval"@en ;
    rdfs:comment "Relates an event to its time interval"@en ;
    rdfs:domain ahmi:Event ;
    rdfs:range ahmi:TimeInterval .

ahmi:hasPart a owl:ObjectProperty ;
    rdfs:label "has part"@en ;
    rdfs:comment "Relates an entity to its parts"@en ;
    rdfs:domain ahmi:Entity ;
    rdfs:range ahmi:Entity .

ahmi:triggers a owl:ObjectProperty ;
    rdfs:label "triggers"@en ;
    rdfs:comment "Relates a driver state to the adaptation it triggers"@en ;
    rdfs:domain ahmi:DriverState ;
    rdfs:range ahmi:AdaptationEvent .

ahmi:detectedBy a owl:ObjectProperty ;
    rdfs:label "detected by"@en ;
    rdfs:comment "Relates a driver state to the method used to detect it"@en ;
    rdfs:domain ahmi:DriverState ;
    rdfs:range ahmi:DetectionMethod .

ahmi:involvesFeedback a owl:ObjectProperty ;
    rdfs:label "involves feedback"@en ;
    rdfs:comment "Relates an adaptation event to the feedback it involves"@en ;
    rdfs:domain ahmi:AdaptationEvent ;
    rdfs:range ahmi:Feedback .

# Example Individuals
ahmi:michaelsDrowsinessDriving a ahmi:DriversinessDrivingProcess ;
    rdfs:label "Michael's Drowsiness Driving"@en ;
    rdfs:comment "The process of Michael driving while experiencing drowsiness"@en ;
    ahmi:hasParticipant ahmi:michael .

ahmi:michaelsDrowsinessAsSafetyRisk a ahmi:DrowsinessAsRiskSituation ;
    rdfs:label "Michael's Drowsiness as Safety Risk"@en ;
    rdfs:comment "The situation of viewing Michael's drowsiness as a safety risk"@en ;
    ahmi:observes ahmi:michaelsDrowsinessDriving ;
    ahmi:consistentWith ahmi:vehicleSafetyTheory .

ahmi:michaelsDrowsinessAsNeedForRest a ahmi:DrowsinessAsFatigueSituation ;
    rdfs:label "Michael's Drowsiness as Need for Rest"@en ;
    rdfs:comment "The situation of viewing Michael's drowsiness as indicating a need for rest"@en ;
    ahmi:observes ahmi:michaelsDrowsinessDriving ;
    ahmi:consistentWith ahmi:driverWellbeingTheory .

ahmi:vibrationAdaptationEvent a ahmi:AdaptationEvent ;
    rdfs:label "Vibration Adaptation Event"@en ;
    rdfs:comment "The event of the vehicle adapting by providing steering wheel vibration"@en ;
    ahmi:hasParticipant ahmi:steeringWheelVibration ;
    ahmi:triggered ahmi:michaelsDrowsiness .

ahmi:adaptationAsSafetyIntervention a ahmi:AdaptationSituation ;
    rdfs:label "Adaptation as Safety Intervention"@en ;
    rdfs:comment "The situation of viewing the adaptation as a safety intervention"@en ;
    ahmi:observes ahmi:vibrationAdaptationEvent ;
    ahmi:consistentWith ahmi:vehicleSafetyTheory .