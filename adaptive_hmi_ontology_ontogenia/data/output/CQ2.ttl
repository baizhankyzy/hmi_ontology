@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .

ahmi:Driver a owl:Class ;
    rdfs:label "Driver"@en ;
    rdfs:comment "A person operating a vehicle"@en .

ahmi:Vehicle a owl:Class ;
    rdfs:label "Vehicle"@en ;
    rdfs:comment "A means of transportation"@en .

ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "A condition or state of the driver"@en .

ahmi:CognitiveState a owl:Class ;
    rdfs:subClassOf ahmi:DriverState ;
    rdfs:label "Cognitive State"@en ;
    rdfs:comment "A mental state of the driver"@en .

ahmi:InattentionState a owl:Class ;
    rdfs:subClassOf ahmi:CognitiveState ;
    rdfs:label "Inattention State"@en ;
    rdfs:comment "A state of reduced attention or focus"@en .

ahmi:Drowsiness a owl:Class ;
    rdfs:subClassOf ahmi:InattentionState ;
    rdfs:label "Drowsiness"@en ;
    rdfs:comment "A state of feeling sleepy or fatigued"@en .

ahmi:Fatigue a owl:Class ;
    rdfs:subClassOf ahmi:InattentionState ;
    rdfs:label "Fatigue"@en ;
    rdfs:comment "A state of physical or mental exhaustion"@en .

ahmi:DetectionMethod a owl:Class ;
    rdfs:label "Detection Method"@en ;
    rdfs:comment "A method or technique used to detect driver states"@en .

ahmi:VisualSensor a owl:Class ;
    rdfs:subClassOf ahmi:DetectionMethod ;
    rdfs:label "Visual Sensor"@en ;
    rdfs:comment "A sensor that captures visual data"@en .

ahmi:DriverFacingVisualSensor a owl:Class ;
    rdfs:subClassOf ahmi:VisualSensor ;
    rdfs:label "Driver-facing Visual Sensor"@en ;
    rdfs:comment "A visual sensor aimed at the driver's face"@en .

ahmi:EyeTracking a owl:Class ;
    rdfs:subClassOf ahmi:DetectionMethod ;
    rdfs:label "Eye Tracking"@en ;
    rdfs:comment "A method for tracking eye movements and gaze"@en .

ahmi:BlinkDetection a owl:Class ;
    rdfs:subClassOf ahmi:DetectionMethod ;
    rdfs:label "Blink Detection"@en ;
    rdfs:comment "A method for detecting blink patterns"@en .

ahmi:PhysiologicalSensor a owl:Class ;
    rdfs:subClassOf ahmi:DetectionMethod ;
    rdfs:label "Physiological Sensor"@en ;
    rdfs:comment "A sensor that measures physiological signals"@en .

ahmi:BehaviorAnalysis a owl:Class ;
    rdfs:subClassOf ahmi:DetectionMethod ;
    rdfs:label "Behavior Analysis"@en ;
    rdfs:comment "A method for analyzing driver behavior patterns"@en .

ahmi:detects a owl:ObjectProperty ;
    rdfs:label "detects"@en ;
    rdfs:comment "Relates a detection method to the driver state it detects"@en ;
    rdfs:domain ahmi:DetectionMethod ;
    rdfs:range ahmi:DriverState .

ahmi:hasDetectionMethod a owl:ObjectProperty ;
    rdfs:label "has detection method"@en ;
    rdfs:comment "Relates a vehicle to the detection methods it employs"@en ;
    rdfs:domain ahmi:Vehicle ;
    rdfs:range ahmi:DetectionMethod .

ahmi:HeadPosition a owl:Class ;
    rdfs:label "Head Position"@en ;
    rdfs:comment "The position or orientation of the driver's head"@en .

ahmi:NoddingPattern a owl:Class ;
    rdfs:subClassOf ahmi:HeadPosition ;
    rdfs:label "Nodding Pattern"@en ;
    rdfs:comment "A pattern of head nodding or drooping"@en .

ahmi:hasHeadPosition a owl:ObjectProperty ;
    rdfs:label "has head position"@en ;
    rdfs:comment "Relates a driver state to the head position associated with it"@en ;
    rdfs:domain ahmi:DriverState ;
    rdfs:range ahmi:HeadPosition .

ahmi:Event a owl:Class ;
    rdfs:label "Event"@en ;
    rdfs:comment "An occurrence or happening"@en .

ahmi:Situation a owl:Class ;
    rdfs:label "Situation"@en ;
    rdfs:comment "A view or interpretation of an event"@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:satisfies ;
        owl:someValuesFrom ahmi:Description
    ] .

ahmi:Description a owl:Class ;
    rdfs:label "Description"@en ;
    rdfs:comment "A conceptualization that provides context for interpreting situations"@en .

ahmi:satisfies a owl:ObjectProperty ;
    rdfs:label "satisfies"@en ;
    rdfs:comment "Relates a situation to the description it satisfies"@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Description .

ahmi:hasEvent a owl:ObjectProperty ;
    rdfs:label "has event"@en ;
    rdfs:comment "Relates a situation to the event it interprets"@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Event .

ahmi:DrowsinessDetectionSituation a owl:Class ;
    rdfs:subClassOf ahmi:Situation ;
    rdfs:label "Drowsiness Detection Situation"@en ;
    rdfs:comment "A situation where drowsiness is detected in the driver"@en .

ahmi:DrowsinessDetectionDescription a owl:Class ;
    rdfs:subClassOf ahmi:Description ;
    rdfs:label "Drowsiness Detection Description"@en ;
    rdfs:comment "A conceptualization for interpreting situations as drowsiness detection"@en .