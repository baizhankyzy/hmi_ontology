@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .
@prefix dul: <http://ontologydesignpatterns.org/ont/dul/DUL.owl#> .

ahmi:AutomationModeTransition a owl:Class ;
    rdfs:label "Automation Mode Transition"@en ;
    rdfs:comment "The process of transitioning between different levels of vehicle automation, such as from autonomous mode to manual driving mode."@en ;
    rdfs:subClassOf dul:Event .

ahmi:TrustCalibrationMechanism a owl:Class ;
    rdfs:label "Trust Calibration Mechanism"@en ;
    rdfs:comment "A mechanism designed to ensure smooth and trustworthy transitions during automation mode changes by monitoring driver state and providing appropriate feedback."@en .

ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "The physical, cognitive, and behavioral state of the driver during an automation mode transition."@en .

ahmi:DistractionState a owl:Class ;
    rdfs:subClassOf ahmi:DriverState ;
    rdfs:label "Distraction State"@en ;
    rdfs:comment "The state of the driver being engaged in non-driving related activities."@en .

ahmi:PostureState a owl:Class ;
    rdfs:subClassOf ahmi:DriverState ;
    rdfs:label "Posture State"@en ;
    rdfs:comment "The physical posture and body position of the driver."@en .

ahmi:CognitiveState a owl:Class ;
    rdfs:subClassOf ahmi:DriverState ;
    rdfs:label "Cognitive State"@en ;
    rdfs:comment "The mental and cognitive state of the driver, including attention levels and vigilance."@en .

ahmi:FeedbackModality a owl:Class ;
    rdfs:label "Feedback Modality"@en ;
    rdfs:comment "The different modalities used to provide feedback to the driver during an automation mode transition."@en .

ahmi:VisualFeedback a owl:Class ;
    rdfs:subClassOf ahmi:FeedbackModality ;
    rdfs:label "Visual Feedback"@en ;
    rdfs:comment "Visual cues and information provided to the driver during the transition."@en .

ahmi:AudioFeedback a owl:Class ;
    rdfs:subClassOf ahmi:FeedbackModality ;
    rdfs:label "Audio Feedback"@en ;
    rdfs:comment "Auditory notifications and cues provided to the driver during the transition."@en .

ahmi:TactileFeedback a owl:Class ;
    rdfs:subClassOf ahmi:FeedbackModality ;
    rdfs:label "Tactile Feedback"@en ;
    rdfs:comment "Haptic alerts and vibrations provided to the driver during the transition."@en .

ahmi:MultimodalIntegration a owl:Class ;
    rdfs:label "Multimodal Integration"@en ;
    rdfs:comment "The combination and coordination of multiple feedback modalities during the automation mode transition."@en ;
    rdfs:subClassOf ahmi:TrustCalibrationMechanism .

ahmi:InteractionTiming a owl:Class ;
    rdfs:label "Interaction Timing"@en ;
    rdfs:comment "The timing and sequencing of interactions and feedback provided to the driver during the transition."@en ;
    rdfs:subClassOf ahmi:TrustCalibrationMechanism .

ahmi:DriverStateMonitoring a owl:Class ;
    rdfs:label "Driver State Monitoring"@en ;
    rdfs:comment "The continuous monitoring of the driver's state, including distraction, posture, and cognitive state, during the transition."@en ;
    rdfs:subClassOf ahmi:TrustCalibrationMechanism .

ahmi:AdaptiveFeedback a owl:Class ;
    rdfs:label "Adaptive Feedback"@en ;
    rdfs:comment "The ability to adjust and adapt the feedback provided to the driver based on their monitored state and readiness during the transition."@en ;
    rdfs:subClassOf ahmi:TrustCalibrationMechanism .

ahmi:hasDriverState a owl:ObjectProperty ;
    rdfs:label "has driver state"@en ;
    rdfs:comment "Relates an automation mode transition to the driver state observed during the transition."@en ;
    rdfs:domain ahmi:AutomationModeTransition ;
    rdfs:range ahmi:DriverState .

ahmi:hasFeedbackModality a owl:ObjectProperty ;
    rdfs:label "has feedback modality"@en ;
    rdfs:comment "Relates a trust calibration mechanism to the feedback modalities used during the transition."@en ;
    rdfs:domain ahmi:TrustCalibrationMechanism ;
    rdfs:range ahmi:FeedbackModality .

ahmi:implements a owl:ObjectProperty ;
    rdfs:label "implements"@en ;
    rdfs:comment "Relates an automation mode transition to the trust calibration mechanisms implemented during the transition."@en ;
    rdfs:domain ahmi:AutomationModeTransition ;
    rdfs:range ahmi:TrustCalibrationMechanism .

ahmi:TransitionSituation a owl:Class ;
    rdfs:label "Transition Situation"@en ;
    rdfs:comment "A situation representing a specific view or interpretation of an automation mode transition event."@en ;
    rdfs:subClassOf dul:Situation ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty dul:satisfies ;
        owl:someValuesFrom ahmi:TransitionDescription
    ] .

ahmi:TransitionDescription a owl:Class ;
    rdfs:label "Transition Description"@en ;
    rdfs:comment "A conceptualization or description that provides context for interpreting automation mode transition situations."@en ;
    rdfs:subClassOf dul:Description .

ahmi:observes a owl:ObjectProperty ;
    rdfs:label "observes"@en ;
    rdfs:comment "Relates a transition situation to the automation mode transition event it observes or interprets."@en ;
    rdfs:domain ahmi:TransitionSituation ;
    rdfs:range ahmi:AutomationModeTransition .