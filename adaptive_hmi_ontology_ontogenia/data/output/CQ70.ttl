@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .

ahmi:SeatOccupancySensor a owl:Class ;
    rdfs:label "Seat Occupancy Sensor"@en ;
    rdfs:comment "A sensor that detects the occupancy and posture of the driver in the vehicle seat."@en .

ahmi:RoadCondition a owl:Class ;
    rdfs:label "Road Condition"@en ;
    rdfs:comment "The physical state and characteristics of the road surface."@en .

ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "The physical and mental state of the driver."@en .

ahmi:hasRoadCondition a owl:ObjectProperty ;
    rdfs:label "has road condition"@en ;
    rdfs:comment "Relates a situation to the road condition observed in that situation."@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:RoadCondition .

ahmi:hasDriverState a owl:ObjectProperty ;
    rdfs:label "has driver state"@en ;
    rdfs:comment "Relates a situation to the driver state observed in that situation."@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:DriverState .

ahmi:hasSeatOccupancyData a owl:ObjectProperty ;
    rdfs:label "has seat occupancy data"@en ;
    rdfs:comment "Relates a situation to the seat occupancy sensor data observed in that situation."@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:SeatOccupancySensorData .

ahmi:SeatOccupancySensorData a owl:Class ;
    rdfs:label "Seat Occupancy Sensor Data"@en ;
    rdfs:comment "The data captured by the seat occupancy sensor, including body posture and trunk position."@en .

ahmi:Situation a owl:Class ;
    rdfs:label "Situation"@en ;
    rdfs:comment "A view or interpretation of events related to the driver, vehicle, and environment."@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:hasRoadCondition ;
        owl:someValuesFrom ahmi:RoadCondition
    ] , [
        a owl:Restriction ;
        owl:onProperty ahmi:hasDriverState ;
        owl:someValuesFrom ahmi:DriverState
    ] , [
        a owl:Restriction ;
        owl:onProperty ahmi:hasSeatOccupancyData ;
        owl:someValuesFrom ahmi:SeatOccupancySensorData
    ] .

ahmi:EvenRoadCondition a owl:Class ;
    rdfs:label "Even Road Condition"@en ;
    rdfs:comment "A road condition with a smooth, level surface."@en ;
    rdfs:subClassOf ahmi:RoadCondition .

ahmi:UnevenRoadCondition a owl:Class ;
    rdfs:label "Uneven Road Condition"@en ;
    rdfs:comment "A road condition with an irregular or bumpy surface."@en ;
    rdfs:subClassOf ahmi:RoadCondition ;
    owl:disjointWith ahmi:EvenRoadCondition .

ahmi:NormalPosture a owl:Class ;
    rdfs:label "Normal Posture"@en ;
    rdfs:comment "A driver state with a relaxed and upright body posture."@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:AdjustedPosture a owl:Class ;
    rdfs:label "Adjusted Posture"@en ;
    rdfs:comment "A driver state with an adjusted body posture to maintain stability."@en ;
    rdfs:subClassOf ahmi:DriverState ;
    owl:disjointWith ahmi:NormalPosture .

ahmi:hasPosture a owl:ObjectProperty ;
    rdfs:label "has posture"@en ;
    rdfs:comment "Relates a driver state to the body posture observed in that state."@en ;
    rdfs:domain ahmi:DriverState ;
    rdfs:range ahmi:BodyPosture .

ahmi:BodyPosture a owl:Class ;
    rdfs:label "Body Posture"@en ;
    rdfs:comment "The physical posture and position of the driver's body."@en .

ahmi:NormalPostureData a owl:Class ;
    rdfs:label "Normal Posture Data"@en ;
    rdfs:comment "Seat occupancy sensor data indicating a relaxed and upright body posture."@en ;
    rdfs:subClassOf ahmi:SeatOccupancySensorData .

ahmi:AdjustedPostureData a owl:Class ;
    rdfs:label "Adjusted Posture Data"@en ;
    rdfs:comment "Seat occupancy sensor data indicating an adjusted body posture to maintain stability."@en ;
    rdfs:subClassOf ahmi:SeatOccupancySensorData ;
    owl:disjointWith ahmi:NormalPostureData .

ahmi:hasPostureData a owl:ObjectProperty ;
    rdfs:label "has posture data"@en ;
    rdfs:comment "Relates seat occupancy sensor data to the body posture observed in that data."@en ;
    rdfs:domain ahmi:SeatOccupancySensorData ;
    rdfs:range ahmi:BodyPosture .