@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .

ahmi:EnvironmentalCondition a owl:Class ;
    rdfs:label "Environmental Condition"@en ;
    rdfs:comment "Conditions in the external environment that may affect driving."@en .

ahmi:Weather a owl:Class ;
    rdfs:label "Weather"@en ;
    rdfs:comment "Atmospheric conditions at a given time and place."@en ;
    rdfs:subClassOf ahmi:EnvironmentalCondition .

ahmi:Sun a owl:Class ;
    rdfs:label "Sun"@en ;
    rdfs:comment "Clear, sunny weather conditions."@en ;
    rdfs:subClassOf ahmi:Weather .

ahmi:Fog a owl:Class ;
    rdfs:label "Fog"@en ;
    rdfs:comment "Weather condition with reduced visibility due to suspended water droplets."@en ;
    rdfs:subClassOf ahmi:Weather .

ahmi:EnvironmentalConditionAssessment a owl:Class ;
    rdfs:label "Environmental Condition Assessment"@en ;
    rdfs:comment "The process of evaluating external conditions that may impact driving."@en .

ahmi:VisibilityAssessment a owl:Class ;
    rdfs:label "Visibility Assessment"@en ;
    rdfs:comment "The assessment of visibility conditions based on environmental factors."@en ;
    rdfs:subClassOf ahmi:EnvironmentalConditionAssessment .

ahmi:WeatherTransition a owl:Class ;
    rdfs:label "Weather Transition"@en ;
    rdfs:comment "A change in weather conditions over time."@en ;
    rdfs:subClassOf ahmi:EnvironmentalCondition .

ahmi:SunToFogTransition a owl:Class ;
    rdfs:label "Sun to Fog Transition"@en ;
    rdfs:comment "A transition from sunny to foggy weather conditions."@en ;
    rdfs:subClassOf ahmi:WeatherTransition .

ahmi:hasWeatherCondition a owl:ObjectProperty ;
    rdfs:label "has weather condition"@en ;
    rdfs:comment "Relates an environmental condition assessment to the weather condition being evaluated."@en ;
    rdfs:domain ahmi:EnvironmentalConditionAssessment ;
    rdfs:range ahmi:Weather .

ahmi:assessesVisibility a owl:ObjectProperty ;
    rdfs:label "assesses visibility"@en ;
    rdfs:comment "Relates a visibility assessment to the weather condition being evaluated for visibility."@en ;
    rdfs:domain ahmi:VisibilityAssessment ;
    rdfs:range ahmi:Weather .

ahmi:hasWeatherTransition a owl:ObjectProperty ;
    rdfs:label "has weather transition"@en ;
    rdfs:comment "Relates an environmental condition assessment to a transition in weather conditions."@en ;
    rdfs:domain ahmi:EnvironmentalConditionAssessment ;
    rdfs:range ahmi:WeatherTransition .

ahmi:VisibilityReduction a owl:Class ;
    rdfs:label "Visibility Reduction"@en ;
    rdfs:comment "A situation where visibility is reduced due to environmental conditions."@en ;
    rdfs:subClassOf ahmi:Situation ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            [
                a owl:Restriction ;
                owl:onProperty ahmi:satisfies ;
                owl:someValuesFrom [
                    a owl:Restriction ;
                    owl:onProperty ahmi:hasParameter ;
                    owl:someValuesFrom ahmi:VisibilityAssessment
                ]
            ]
            [
                a owl:Restriction ;
                owl:onProperty ahmi:hasWeatherTransition ;
                owl:someValuesFrom ahmi:SunToFogTransition
            ]
        )
    ] .

ahmi:Situation a owl:Class ;
    rdfs:label "Situation"@en ;
    rdfs:comment "A view, consistent with a Description, on a set of entities."@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:satisfies ;
        owl:someValuesFrom ahmi:Description
    ] .

ahmi:Description a owl:Class ;
    rdfs:label "Description"@en ;
    rdfs:comment "A conceptualization that provides a context for interpreting situations and events."@en .

ahmi:satisfies a owl:ObjectProperty ;
    rdfs:label "satisfies"@en ;
    rdfs:comment "Relates a situation to the description it satisfies."@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Description .