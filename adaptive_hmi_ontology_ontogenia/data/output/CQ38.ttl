@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .

ahmi:AdaptiveHMI a owl:Class ;
    rdfs:label "Adaptive HMI"@en ;
    rdfs:comment "A human-machine interface that adapts its feedback and interaction modalities based on driver state, vehicle context, and environmental factors."@en .

ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "The cognitive, physical, and behavioral state of the driver."@en .

ahmi:CognitiveState a owl:Class ;
    rdfs:label "Cognitive State"@en ;
    rdfs:comment "The mental state of the driver, including factors like attention, processing speed, and decision-making abilities."@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:SlowerProcessingCapability a owl:Class ;
    rdfs:label "Slower Processing Capability"@en ;
    rdfs:comment "A cognitive state characterized by reduced processing speed and longer reaction times."@en ;
    rdfs:subClassOf ahmi:CognitiveState .

ahmi:VisualElement a owl:Class ;
    rdfs:label "Visual Element"@en ;
    rdfs:comment "A visual component of the HMI display, such as icons, text, or graphics."@en .

ahmi:DisplayType a owl:Class ;
    rdfs:label "Display Type"@en ;
    rdfs:comment "A type of visual display or interface used in the HMI, such as a navigation display or instrument cluster."@en .

ahmi:MessageStructure a owl:Class ;
    rdfs:label "Message Structure"@en ;
    rdfs:comment "The structure and organization of messages presented to the driver through the HMI."@en .

ahmi:hasDriverState a owl:ObjectProperty ;
    rdfs:label "has driver state"@en ;
    rdfs:comment "Relates an adaptive HMI to the driver state it is designed for."@en ;
    rdfs:domain ahmi:AdaptiveHMI ;
    rdfs:range ahmi:DriverState .

ahmi:hasVisualElement a owl:ObjectProperty ;
    rdfs:label "has visual element"@en ;
    rdfs:comment "Relates a display type to the visual elements it contains."@en ;
    rdfs:domain ahmi:DisplayType ;
    rdfs:range ahmi:VisualElement .

ahmi:hasMessageStructure a owl:ObjectProperty ;
    rdfs:label "has message structure"@en ;
    rdfs:comment "Relates an adaptive HMI to the message structure it employs for presenting information."@en ;
    rdfs:domain ahmi:AdaptiveHMI ;
    rdfs:range ahmi:MessageStructure .

ahmi:adaptsVisualElementSize a owl:ObjectProperty ;
    rdfs:label "adapts visual element size"@en ;
    rdfs:comment "Relates a slower processing capability to the adaptation of increasing visual element size."@en ;
    rdfs:domain ahmi:SlowerProcessingCapability ;
    rdfs:range ahmi:VisualElement .

ahmi:adaptsMessageStructure a owl:ObjectProperty ;
    rdfs:label "adapts message structure"@en ;
    rdfs:comment "Relates a slower processing capability to the adaptation of simplifying the message structure."@en ;
    rdfs:domain ahmi:SlowerProcessingCapability ;
    rdfs:range ahmi:MessageStructure .

ahmi:SimplifiedMessageStructure a owl:Class ;
    rdfs:label "Simplified Message Structure"@en ;
    rdfs:comment "A message structure that uses simpler language, shorter sentences, and more straightforward organization for improved comprehensibility."@en ;
    rdfs:subClassOf ahmi:MessageStructure .

ahmi:IncreasedComprehensibility a owl:Class ;
    rdfs:label "Increased Comprehensibility"@en ;
    rdfs:comment "A characteristic of a message structure that enhances the understandability and clarity of the information presented."@en ;
    rdfs:subClassOf ahmi:MessageStructure .

ahmi:hasComprehensibility a owl:ObjectProperty ;
    rdfs:label "has comprehensibility"@en ;
    rdfs:comment "Relates a message structure to its level of comprehensibility."@en ;
    rdfs:domain ahmi:MessageStructure ;
    rdfs:range ahmi:IncreasedComprehensibility .

ahmi:SimplifiedMessageStructure rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ahmi:hasComprehensibility ;
    owl:someValuesFrom ahmi:IncreasedComprehensibility
] .