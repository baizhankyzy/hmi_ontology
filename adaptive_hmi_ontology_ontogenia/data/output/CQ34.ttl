@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ahmi: <http://example.org/ahmi#> .

ahmi:AdaptiveHMI a owl:Ontology .

###### Classes ######

ahmi:Event a owl:Class ;
    rdfs:label "Event"@en ;
    rdfs:comment "A physical, social, or mental process that occurs over time."@en .

ahmi:Situation a owl:Class ;
    rdfs:label "Situation"@en ;
    rdfs:comment "A view or interpretation of an event, consistent with a particular description."@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:satisfies ;
        owl:someValuesFrom ahmi:Description
    ] .

ahmi:Description a owl:Class ;
    rdfs:label "Description"@en ;
    rdfs:comment "A conceptualization that provides context for interpreting situations and events."@en .

ahmi:DriverState a owl:Class ;
    rdfs:label "Driver State"@en ;
    rdfs:comment "The cognitive, physical, or emotional state of the driver."@en .

ahmi:CognitiveState a owl:Class ;
    rdfs:label "Cognitive State"@en ;
    rdfs:comment "The mental state of the driver, including attention, perception, and decision-making."@en ;
    rdfs:subClassOf ahmi:DriverState .

ahmi:SteeringBehavior a owl:Class ;
    rdfs:label "Steering Behavior"@en ;
    rdfs:comment "The driver's actions and patterns related to steering the vehicle."@en .

ahmi:EnvironmentalCondition a owl:Class ;
    rdfs:label "Environmental Condition"@en ;
    rdfs:comment "The external conditions surrounding the vehicle, such as weather, road type, and visibility."@en .

ahmi:VehicleSystem a owl:Class ;
    rdfs:label "Vehicle System"@en ;
    rdfs:comment "The components and systems within the vehicle that interact with the driver."@en .

ahmi:FeedbackModality a owl:Class ;
    rdfs:label "Feedback Modality"@en ;
    rdfs:comment "The sensory channel through which feedback is provided to the driver."@en .

ahmi:VisualFeedback a owl:Class ;
    rdfs:label "Visual Feedback"@en ;
    rdfs:comment "Feedback provided through visual displays and elements."@en ;
    rdfs:subClassOf ahmi:FeedbackModality .

ahmi:AudioFeedback a owl:Class ;
    rdfs:label "Audio Feedback"@en ;
    rdfs:comment "Feedback provided through auditory channels, such as voice prompts or tones."@en ;
    rdfs:subClassOf ahmi:FeedbackModality .

ahmi:HapticFeedback a owl:Class ;
    rdfs:label "Haptic Feedback"@en ;
    rdfs:comment "Feedback provided through tactile or force-feedback mechanisms."@en ;
    rdfs:subClassOf ahmi:FeedbackModality .

###### Object Properties ######

ahmi:satisfies a owl:ObjectProperty ;
    rdfs:label "satisfies"@en ;
    rdfs:comment "Relates a situation to the description it satisfies."@en ;
    rdfs:domain ahmi:Situation ;
    rdfs:range ahmi:Description .

ahmi:hasDriverState a owl:ObjectProperty ;
    rdfs:label "has driver state"@en ;
    rdfs:comment "Relates an event or situation to the driver's state."@en ;
    rdfs:domain ahmi:Event , ahmi:Situation ;
    rdfs:range ahmi:DriverState .

ahmi:hasSteeringBehavior a owl:ObjectProperty ;
    rdfs:label "has steering behavior"@en ;
    rdfs:comment "Relates an event or situation to the driver's steering behavior."@en ;
    rdfs:domain ahmi:Event , ahmi:Situation ;
    rdfs:range ahmi:SteeringBehavior .

ahmi:hasEnvironmentalCondition a owl:ObjectProperty ;
    rdfs:label "has environmental condition"@en ;
    rdfs:comment "Relates an event or situation to the environmental conditions."@en ;
    rdfs:domain ahmi:Event , ahmi:Situation ;
    rdfs:range ahmi:EnvironmentalCondition .

ahmi:hasFeedbackModality a owl:ObjectProperty ;
    rdfs:label "has feedback modality"@en ;
    rdfs:comment "Relates a vehicle system or situation to the feedback modality used."@en ;
    rdfs:domain ahmi:VehicleSystem , ahmi:Situation ;
    rdfs:range ahmi:FeedbackModality .

ahmi:adaptsTo a owl:ObjectProperty ;
    rdfs:label "adapts to"@en ;
    rdfs:comment "Relates a vehicle system or situation to the driver state, steering behavior, or environmental condition it adapts to."@en ;
    rdfs:domain ahmi:VehicleSystem , ahmi:Situation ;
    rdfs:range ahmi:DriverState , ahmi:SteeringBehavior , ahmi:EnvironmentalCondition .

###### Datatype Properties ######

ahmi:hasSteeringEntropyValue a owl:DatatypeProperty ;
    rdfs:label "has steering entropy value"@en ;
    rdfs:comment "The calculated entropy value of the driver's steering behavior."@en ;
    rdfs:domain ahmi:SteeringBehavior ;
    rdfs:range xsd:float .

ahmi:hasMicroAdjustmentsFrequency a owl:DatatypeProperty ;
    rdfs:label "has micro adjustments frequency"@en ;
    rdfs:comment "The frequency of small steering corrections made by the driver."@en ;
    rdfs:domain ahmi:SteeringBehavior ;
    rdfs:range xsd:float .

###### Restrictions ######

ahmi:HighCognitiveLoad a owl:Class ;
    rdfs:label "High Cognitive Load"@en ;
    rdfs:comment "A situation where the driver's cognitive state indicates high mental workload or attention demands."@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ahmi:hasDriverState ;
        owl:someValuesFrom [
            a owl:Restriction ;
            owl:onProperty ahmi:hasSteeringBehavior ;
            owl:someValuesFrom [
                a owl:Restriction ;
                owl:onProperty ahmi:hasSteeringEntropyValue ;
                owl:hasValue "high"^^xsd:string
            ] , [
                a owl:Restriction ;
                owl:onProperty ahmi:hasMicroAdjustmentsFrequency ;
                owl:hasValue "high"^^xsd:string
            ]
        ]
    ] .